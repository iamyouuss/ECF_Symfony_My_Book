        <div class="mb-3">
            You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
            <a href="{{path('user_show', {'id': app.user.id})}}">Voir mon profil</a>
        </div>
        <div>
            <a href="{{path('author_all')}}">tous les auteurs</a>
        </div>

    {% endif %}

{% endblock %}
